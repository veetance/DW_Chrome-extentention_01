{
    "manifest_version": 2, 
    "name": "XYRooler",
    "description": "UPDATE: Use this tool to get accurate X,Y cordinates",
    "version": "1.0",
     
   
    



    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    

   



 "background": {
 "scripts": ["background.js"]
 


 },
     



    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png" 
     ],



   "browser_action": {
   "default_icon": "MY_ICON.png"

    
  }

}
